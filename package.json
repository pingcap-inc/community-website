{
  "name": "@pingcap/tug-website",
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "lerna:bootstrap": "lerna bootstrap --hoist",
    "lint": "eslint . --ext .js,.jsx",
    "postinstall": "npm run lerna:bootstrap",
    "server:init": "next build && pm2 start --name tug-website-next-server npm -- run start",
    "server:reload": "pm2 reload tug-website-next-server",
    "start": "next start",
    "storybook": "cd packages/pingcap-ui; npm run storybook"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint"
    }
  },
  "lint-staged": {
    "*": [
      "prettier-eslint --write",
      "git add"
    ]
  },
  "engines": {
    "node": "14.13.0",
    "npm": "6.14.8"
  },
  "dependencies": {
    "@ant-design/icons": "4.6.2",
    "ahooks": "2.10.0",
    "antd": "4.14.0",
    "classnames": "2.2.6",
    "dayjs": "1.10.4",
    "next": "10.0.9",
    "polished": "4.1.1",
    "ramda": "0.27.1",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-is": "17.0.1",
    "sass": "1.32.8",
    "styled-components": "5.2.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.0.0",
    "@typescript-eslint/parser": "^4.0.0",
    "babel-eslint": "^10.1.0",
    "babel-plugin-styled-components": "^1.12.0",
    "eslint": "^7.5.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.0.8",
    "husky": "^5.1.3",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.4",
    "prettier-eslint": "^12.0.0"
  }
}
