{
  "name": "@pingcap/tug-website",
  "private": true,
  "scripts": {
    "build": "next build && npm run build:uiScripts",
    "build:accounts": "lerna run --scope @tidb-community/accounts build",
    "build:accounts:staging": "lerna run --scope @tidb-community/accounts build:staging",
    "build:shared": "lerna run --ignore @tidb-community/accounts --ignore @tidb-community/ui-scripts build",
    "build:uiScripts": "lerna run --scope @tidb-community/ui-scripts build",
    "build:watch": "lerna run --no-bail build:watch",
    "copy:locales": "rm -rf public/locales && cp -r packages/i18n/locales public",
    "deploy": "shipit production deploy",
    "dev": "npm run build:shared && (npm run start:i18n & npm run start:mockApi & next dev)",
    "lint": "next lint && eslint . --ext .js,.jsx --ignore-path .gitignore",
    "postinstall": "lerna bootstrap && npm run build:shared",
    "prepare": "husky install",
    "server:init": "next build && npm run server:start",
    "server:reload": "pm2 reload pm2.config.js",
    "server:start": "pm2 start pm2.config.js",
    "start": "next start",
    "start:accounts": "lerna run --scope @tidb-community/accounts start",
    "start:i18n": "lerna run --scope @tidb-community/i18n start",
    "start:mockApi": "lerna run --scope @tidb-community/mock-api start",
    "storybook": "lerna run --scope @tidb-community/ui storybook -- -- -s $(pwd)/public",
    "test": "jest",
    "test:changed": "npm test -- --changedSince=main",
    "test:cov": "npm test -- --coverage",
    "test:watch": "npm test -- --watch"
  },
  "engines": {
    "node": "14.13.0",
    "npm": "6.14.8"
  },
  "dependencies": {
    "@ant-design/icons": "4.6.2",
    "@sentry/nextjs": "6.8.0",
    "ahooks": "2.10.7",
    "antd": "4.15.6",
    "antd-img-crop": "3.14.2",
    "axios": "0.21.1",
    "classnames": "2.3.1",
    "dayjs": "1.10.6",
    "formik": "2.2.9",
    "formik-antd": "2.0.1",
    "next": "11.0.1",
    "next-i18next": "8.5.3",
    "polished": "4.1.3",
    "ramda": "0.27.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-is": "17.0.2",
    "styled-components": "5.3.0",
    "swr": "0.5.6",
    "uuid": "8.3.2",
    "yup": "0.32.9"
  },
  "devDependencies": {
    "@sentry/webpack-plugin": "1.16.0",
    "@svgr/webpack": "5.5.0",
    "@testing-library/jest-dom": "5.14.1",
    "@testing-library/react": "12.0.0",
    "@types/faker": "5.5.7",
    "@typescript-eslint/eslint-plugin": "4.28.2",
    "@typescript-eslint/parser": "4.28.2",
    "babel-eslint": "10.1.0",
    "babel-jest": "27.0.6",
    "babel-plugin-styled-components": "1.13.2",
    "eslint": "7.30.0",
    "eslint-config-next": "11.0.1",
    "eslint-config-react-app": "6.0.0",
    "eslint-plugin-flowtype": "5.8.0",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-react": "7.24.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "husky": "7.0.1",
    "i18next-http-backend": "1.2.6",
    "identity-obj-proxy": "3.0.0",
    "jest": "27.0.6",
    "lerna": "4.0.0",
    "lint-staged": "11.0.0",
    "micromatch": "4.0.4",
    "pm2": "5.1.0",
    "prettier": "2.3.2",
    "react-test-renderer": "17.0.2",
    "sass": "1.35.2",
    "shipit-cli": "5.3.0",
    "shipit-deploy": "5.3.0",
    "svgo": "2.3.1"
  }
}
