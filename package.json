{
  "name": "@pingcap/tug-website",
  "private": true,
  "scripts": {
    "build": "next build && npm run build:asktug",
    "build:asktug": "lerna run --scope @tidb-community/asktug build",
    "build:ui": "lerna run --scope @tidb-community/ui build",
    "dev": "next dev",
    "lerna:bootstrap": "lerna bootstrap",
    "lint": "eslint . --ext .js,.jsx",
    "postinstall": "npm run lerna:bootstrap && npm run build:ui",
    "server:init": "next build && npm run server:start",
    "server:reload": "pm2 reload pm2.config.js",
    "server:start": "pm2 start pm2.config.js",
    "start": "next start",
    "storybook": "lerna run --scope @tidb-community/ui storybook -- -- -s $(pwd)/public",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint && npm run test"
    }
  },
  "engines": {
    "node": "14.13.0",
    "npm": "6.14.8"
  },
  "dependencies": {
    "@ant-design/icons": "4.6.2",
    "@sentry/nextjs": "6.3.5",
    "ahooks": "2.10.0",
    "antd": "4.15.0",
    "classnames": "2.3.1",
    "dayjs": "1.10.4",
    "next": "10.1.3",
    "polished": "4.1.1",
    "prettier-eslint-cli": "5.0.1",
    "ramda": "0.27.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-is": "17.0.2",
    "sass": "1.32.8",
    "styled-components": "5.2.3",
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "@sentry/webpack-plugin": "1.15.1",
    "@svgr/webpack": "5.5.0",
    "@testing-library/jest-dom": "5.11.10",
    "@testing-library/react": "11.2.6",
    "@typescript-eslint/eslint-plugin": "4.20.0",
    "@typescript-eslint/parser": "4.20.0",
    "babel-eslint": "10.1.0",
    "babel-jest": "26.6.3",
    "babel-plugin-styled-components": "1.12.0",
    "eslint": "7.23.0",
    "eslint-config-react-app": "6.0.0",
    "eslint-plugin-flowtype": "5.4.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-react": "7.23.1",
    "eslint-plugin-react-hooks": "4.2.0",
    "husky": "4.3.8",
    "identity-obj-proxy": "3.0.0",
    "jest": "26.6.3",
    "lerna": "4.0.0",
    "lint-staged": "10.5.4",
    "pm2": "4.5.6",
    "react-test-renderer": "17.0.2"
  }
}
